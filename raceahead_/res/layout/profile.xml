<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent" 
    android:orientation="vertical"
    android:background="@drawable/bg">
    <RelativeLayout android:layout_height="fill_parent" 
    android:id="@+id/relativeLayout1" 
    android:layout_width="fill_parent"
    >
         
          
          
          <ImageView 
          android:id="@+id/homebutton4"
          android:src="@drawable/home_n"
          android:scaleType="fitXY"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:adjustViewBounds="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
           <TextView 
          android:id="@+id/aaa"
          android:text="PROFILES"
          android:scaleType="fitXY"
          android:adjustViewBounds="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:paddingLeft="100dp" android:textSize="25dp" android:paddingTop="40dp"/>
          
          <TextView 
          android:id="@+id/aa"
          android:text="NEW PROFILE"
          android:scaleType="fitXY"
          android:adjustViewBounds="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:textSize="30dp" android:paddingLeft="50dp" android:paddingTop="290dp"/>
          <ImageView 
          android:id="@+id/ho"
          android:src="@drawable/bg2"
          android:scaleType="fitXY"
          android:adjustViewBounds="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:paddingTop="75dp"/>
          
          
          <ImageView 
          android:id="@+id/xyz"
          android:src="@drawable/text_holder"
          android:scaleType="fitXY"
          android:layout_above="@+id/enterbutton"
          android:layout_centerHorizontal="true" 
          android:adjustViewBounds="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:longClickable="true"/>
          
	        <AutoCompleteTextView
	            android:background="@android:color/transparent"   
	            android:layout_height="35dp" 
	            android:id="@+id/abc" 
	            android:layout_width="220dp"
	            android:layout_above="@+id/enterbutton"
          android:layout_centerHorizontal="true" 
          android:adjustViewBounds="true" >
	         </AutoCompleteTextView>
          
          <ImageView 
          android:id="@+id/enterbutton"
          android:src="@drawable/enter_n"
          android:scaleType="fitXY"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_centerHorizontal="true" 
          android:adjustViewBounds="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:paddingBottom="40dp" android:paddingLeft="80dp"/>
   	        
   
   
    </RelativeLayout>
</LinearLayout>